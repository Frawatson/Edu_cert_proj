pipeline {
    agent { label 'MvnJenkinSlave' }

	environment {	
		DOCKERHUB_CREDENTIALS=credentials('dockerloginid')
	} 
    
    stages {
        stage('SCM Checkout') {
            steps {
                // Get some code from a GitHub repository
                git 'https://github.com/Frawatson/Edu_cert_proj.git'
            }
		}
        stage('PHP Build') {
            steps {
                sh 'composer update'
                sh 'composer install'
            }
		}
		/*stage('Test') {
            steps {
                sh 'vendor/bin/unitTest.php'
            }
		}*/
        stage("Docker build"){
            steps {
				sh 'docker version'
				sh "docker build -t appleco:${BUILD_NUMBER} ."
				sh 'docker image list'
				sh "docker tag appleco:${BUILD_NUMBER} frawatson/edureka_cert:latest"
            }
        }
		stage('Login2DockerHub') {

			steps {
				sh 'echo $DOCKERHUB_CREDENTIALS_PSW | docker login -u $DOCKERHUB_CREDENTIALS_USR --password-stdin'
			}
		}
        
		stage('Push2DockerHub') {

			steps {
				sh "docker push frawatson/edureka_cert"
			}
		}
        stage('execute Ansible') {
            steps {
                sh 'ansible-playbook -i /etc/ansible/hosts playbook.yml'
            }
		}
        stage('Deploy to Docker') {
            steps {
			 sh 'docker-compose up -d'
            }
	    }
    }
}
